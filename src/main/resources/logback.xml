<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/logfile.log</file>
        <append>false</append>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="deng" level="DEBUG" />

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>